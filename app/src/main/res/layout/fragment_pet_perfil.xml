<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="mx.jennifermontano.petsjenny.FRAGMENTS.PetPerfilFragment">

    <include android:id="@+id/miActionBar"
        android:layout="@layout/actionbar"
        >
    </include>
    <LinearLayout
        android:id="@+id/layoutCircularImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="56dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/circularImageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/perro6"
            app:civ_border="true"
            app:civ_border_color="#3f51b5"
            app:civ_border_width="8dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/pet_profile_name"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:textColor="@color/letraColor"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPetPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</FrameLayout>
