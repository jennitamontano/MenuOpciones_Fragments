<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPet"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="8dp"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include android:id="@+id/mi_action_bar"
            layout="@layout/actionbar">
        </include>

        <LinearLayout
            android:id="@+id/ly1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mi_action_bar"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/perro5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="7dp">

                <ImageButton
                    android:id="@+id/imgBone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgFoto"
                    android:adjustViewBounds="true"
                    android:background="@drawable/dogbonewhite"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvNombreCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nombre_mascota"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnLikeYellow"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/dogboneyellow" />

                <TextView
                    android:id="@+id/tvNumBones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="num_estrellas"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
